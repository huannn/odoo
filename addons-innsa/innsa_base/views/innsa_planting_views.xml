    <menuitem id="innsa_planting_menu"
              name="Innsa Planting"
              parent="innsa_base_root_menu"
              sequence="20"/>

    <menuitem id="innsa_farm_planting_menu" name="Innsa Planting" parent="innsa_planting_menu"
        action="innsa_farm_planting_action" sequence="10"/>

    <menuitem id="innsa_farm_activity_menu" name="Innsa Activity" parent="innsa_planting_menu"
        action="innsa_farm_activity_action" sequence="20"/>

    <menuitem id="innsa_farm_harvest_menu" name="Innsa Harvest" parent="innsa_planting_menu"
        action="innsa_farm_harvest_action" sequence="30"/>
</odoo>