<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FARM PLANTING -->
    <record id="innsa_farm_planting_view_tree" model="ir.ui.view">
        <field name="name">innsa.farm.planting.tree</field>
        <field name="model">innsa.farm.planting</field>
        <field name="arch" type="xml">
            <tree string="Innsa Farm Planting">
                <field name="farm_code"/>
                <field name="farm_name"/>
                <field name="area_code"/>
                <field name="area_name"/>
                <field name="slot_code"/>
                <field name="slot_name"/>
                <field name="purpose"/>
                <field name="tree_type_id"/>
                <field name="quantity"/>
                <field name="start_date"/>
                <field name="manager_id"/>
            </tree>
        </field>
    </record>

    <record id="innsa_farm_planting_view_form" model="ir.ui.view">
        <field name="name">innsa.farm.planting.form</field>
        <field name="model">innsa.farm.planting</field>
        <field name="arch" type="xml">
            <form string="Farm Planting">
                <sheet>
                    <group col="2">
                        <group>
                            <field name="farm_id"/>
                            <field name="area_id"/>
                            <field name="slot_id"/>
                            <field name="manager_id"/>
                        </group>
                        <group>
                            <field name="purpose"/>
                            <field name="tree_type_id"/>
                            <field name="quantity"/>
                            <field name="start_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="innsa_farm_planting_view_search" model="ir.ui.view">
        <field name="name">innsa.farm.planting.search</field>
        <field name="model">innsa.farm.planting</field>
        <field name="arch" type="xml">
            <search string="Search Farm Planting">
                <field name="farm_id"/>
                <field name="area_id"/>
                <field name="slot_id"/>
            </search>
        </field>
    </record>

    <record id="innsa_farm_planting_action" model="ir.actions.act_window">
        <field name="name">Farm Planting</field>
        <field name="res_model">innsa.farm.planting</field>
        <field name="view_mode">tree,form</field>
    </record>

